{
    "description": "Open source management infrastructure platform api",
    "type": "project",
    "require": {
        "ext-json": "*",
        "ext-pdo": "*",
        "laravel/lumen-framework": "^6.0",
        "barryvdh/laravel-cors": "^0.11.3",
        "kain/lumen-curd": "dev-master",
        "kain/lumen-extra": "dev-master"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": {
        "aliyun": {
            "type": "composer",
            "url": "https://mirrors.aliyun.com/composer"
        }
    },
    "license": "MIT"
}
